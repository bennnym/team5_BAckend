<div class="grid=container">
  <grid class="grid-item">
<h1>Sign in</h1>

<%= form_tag login_path do %>
<div class="signin">
<%= label_tag :username %>
<%= text_field_tag :username, nil, :class=>"email"%>

<%= label_tag :password %>
<%= password_field_tag :password, nil, :class=>"email" %>
</div>
<br><br>
<%= submit_tag "Sign In" ,:class => "bttn btn-orange" %>
  </div>
<% end %>
</div>
