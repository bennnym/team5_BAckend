<p id="notice"><%= notice %></p>
<div class="grid-container">
<h1>Flights</h1>
<div class="grid-item">
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>To</th>
      <th>From</th>
      <th>Aircraft</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.date %></td>
        <td><%= flight.to %></td>
        <td><%= flight.from %></td>
        <td><%= flight.airplane.name %></td>
        <td><%= link_to 'Show', flight, :class=>"table-link" %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight), :class=>"table-link" %></td>
        <td><%= link_to 'Destroy', flight, :method=>"delete", data: { confirm: 'Are you sure?' }, :class=>"table-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<br>

<%= link_to 'New Flight', new_flight_path, :class=>"link" %>
